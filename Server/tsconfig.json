{
  "compilerOptions": {
    "target": "ES2020",          // Choose which JavaScript version TypeScript compiles to
    "module": "CommonJS",        // how Node.js imports/exports modules
    "rootDir": "src",            // where our .ts source code lives
    "outDir": "dist",            // where compiled .js files go
    "strict": true,              // enforce type-safety
    "esModuleInterop": true      // Allows clean imports from libraries like Express
  }
}
